alias brewall='brew update && brew upgrade && brew doctor && brew cleanup && brew autoremove'
alias cleands='find . -name ".DS_Store" -exec rm {} \;'

update () {
    # brew upgrade neovim --fetch-HEAD
    brewall
    nvim --headless "+Lazy! sync" +qa
}

function mkcd() {
    mkdir -p $1
    cd $1
}

alias l='ls'
alias ll='ls -ll'
alias la='ls -la'
