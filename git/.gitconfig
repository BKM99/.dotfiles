# This is Git's per-user configuration file.
[alias]
    lg = log --pretty=format:\"%Cgreen%h %Creset%cd %Cblue[%cn] %Creset%s%C(yellow)%d%C(reset)\" --graph --date=relative --decorate --all
    lo = log --oneline
    s = status
    aa = add .
    c = commit
	last = log -1 HEAD --stat
[user]
    name = Brandon Morimoto
    email = bmorimoto99@gmail.com
[color]
    status = auto
    diff = auto
    branch = auto
    interactive = auto
    grep = auto
    ui = auto
[core]
    excludesfile = ~/.gitignore_global
    editor = nvim
    pager = delta
[http]
    postBuffer = 157286400
[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    light = false
    line-numbers = true
    side-by-side = true
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
